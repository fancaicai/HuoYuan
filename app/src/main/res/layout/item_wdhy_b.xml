<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/wdhy_djd_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="山西"
                    android:textSize="15dp"
                    android:textColor="@color/hei"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@mipmap/start"
                    android:drawablePadding="2dp"
                    />
                <TextView
                    android:id="@+id/wdhy_djd_text11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="太原"
                    android:textSize="15dp"
                    android:textColor="@color/hei"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <View
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:background="#555555"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/wdhy_djd_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="河北"
                    android:textSize="15dp"
                    android:textColor="@color/hei"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@mipmap/stop"
                    android:drawablePadding="2dp"
                    />
                <TextView
                    android:id="@+id/wdhy_djd_text22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="石家庄"
                    android:textSize="15dp"
                    android:textColor="@color/hei"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/wdhy_djd_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13.5米"
                    android:textSize="13dp"
                    android:textColor="@color/blue3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="13dp"
                    android:textColor="@color/blue3"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/wdhy_djd_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20吨"
                    android:textSize="13dp"
                    android:textColor="@color/blue3"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="13dp"
                    android:textColor="@color/blue3"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/wdhy_djd_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="板车"
                    android:textSize="13dp"
                    android:textColor="@color/blue3"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/ysz_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物类型:"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/wdhy_img"
                    android:layout_marginTop="8dp"
                    android:textSize="13dp"
                    android:textColor="#555555"
                    android:drawableLeft="@drawable/fhd_hwu"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:id="@+id/wdhy_djd_text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="钢铁"
                    android:textSize="13dp"
                    android:textColor="@color/hei"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/ysz_text1"
                    android:paddingLeft="5dp"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/wdhy_djd_text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20分钟前"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
