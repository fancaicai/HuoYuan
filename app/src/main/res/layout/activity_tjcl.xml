<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tjcl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huotongtianxia.huoyuan.ui.WDCD.tjcl.TJCLActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#50bbfc"
        >
        <ImageView
            android:id="@+id/tjcl_img01"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/grzximgfh"
            />
        <TextView
            android:id="@+id/tjcl_text01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="返回"
            android:layout_toRightOf="@+id/tjcl_img01"
            android:layout_marginTop="18dp"
            android:textSize="18dp"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加车辆"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape13"
        >
        <Spinner
            android:id="@+id/tjcl_spinner"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/tjcl_edt"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:hint="输入车牌查找"
            android:background="@drawable/shape13"
            android:layout_toRightOf="@+id/tjcl_spinner"
            />
        <ImageView
            android:id="@+id/tjcl_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/s"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <ListView
        android:id="@+id/zjcl_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"></ListView>
    <Button
        android:id="@+id/tjcl_btn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/shape6"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="添加"
        android:textColor="#ffffff"
        />
</LinearLayout>
