        <!--android:id="@+id/wdcd_item_text6"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--android:text="太原"-->
        <!--android:textSize="10dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:textColor="#F66B02"-->
        <!--/>-->
</LinearLayout>
