<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gszl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f1f1"
    tools:context="com.huotongtianxia.huoyuan.ui.WDCD.gszl.GSZLActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/bjgszl_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/grzximgfh"
            />
        <TextView
            android:id="@+id/bjgszl_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司资料"
            android:textColor="#222222"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/bjgszl_text02"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="#222222"
            />
        <TextView
            android:id="@+id/bjgszl_text01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="返回"
            android:textSize="18dp"
            android:layout_marginTop="29dp"
            android:textColor="#222222"
            android:layout_toRightOf="@+id/bjgszl_img"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="15dp"
        >
        <EditText
            android:id="@+id/bjgszl_text1"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入您需要修改的信息"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        >
    </RelativeLayout>
</LinearLayout>

