<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huotongtianxia.huoyuan.ui.WDCD.WDCD.WDCDFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@drawable/wdcdcd"
        >
        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            >
            <TextView
                android:id="@+id/qiehuan"
                android:layout_width="72.5dp"
                android:layout_height="36dp"
                android:background="@drawable/shapee2"
                android:text="发布"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="72.5dp"
                android:layout_height="36dp"
                android:text="车队"
                android:textColor="#222222"
                android:textSize="15dp"
                android:gravity="center"
                android:background="@drawable/shapee1"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/wdcd_kefu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/kfdh"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/wdcd_kefudh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/wdcd_kefu"
            />

        <LinearLayout
            android:id="@+id/wdcd_lin5"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:background="@drawable/shape2"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/wdcd_img5"
                android:layout_width="52dp"
                android:layout_height="56dp"
                android:background="@mipmap/cdz_1"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/wdcd_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="212"
                    android:textColor="#222222"
                    android:textSize="18dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="辆"
                    android:textColor="#222222"
                    android:textSize="18dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/wdcd_lin6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/wdcd_img66"
                android:layout_width="53dp"
                android:layout_height="54dp"
                android:layout_marginTop="50dp"
                android:background="@mipmap/cdtj_1"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/wdcd_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加车辆"
                android:textSize="18dp"
                android:textColor="@color/zi"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wdcd_lin7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/wdcd_img77"
                android:layout_width="53dp"
                android:layout_height="54dp"
                android:background="@mipmap/cdss_1"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                />
            <TextView
                android:id="@+id/wdcd_text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索车辆"
                android:textSize="18dp"
                android:textColor="@color/zi"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
