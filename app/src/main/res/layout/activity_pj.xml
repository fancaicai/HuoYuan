<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huotongtianxia.huoyuan.ui.WDCD.ddxq.PJActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleheight">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/hei"
            android:textSize="@dimen/backtxtsize"
            android:layout_marginLeft="@dimen/marginlefa"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="司机评价"
        android:textColor="@color/hei"
        android:textSize="@dimen/backtxtsize"
        android:gravity="center_horizontal"
        android:paddingTop="25dp"
        />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/fahuo"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/pj_hao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ha2"
            />
        <ImageView
            android:id="@+id/pj_cha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ca1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/pj_hao2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="好评"
            android:gravity="center"
            android:textColor="#FCB622"
            />
        <TextView
            android:id="@+id/pj_cha2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#C7C7C7"
            android:text="差评"
            android:gravity="center"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/fahuo"
        />
    <Button
        android:id="@+id/pj_tj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提  交"
        android:textColor="@color/hei"
        android:background="@drawable/shape12"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        />

</LinearLayout>
