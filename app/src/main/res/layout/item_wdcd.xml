<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="15dp"
    >
    <ImageView
        android:id="@+id/wdcd_item_img"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="55dp"
        android:background="@drawable/lsj"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="55dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/wdcd_item_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王保利"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="#222222"
                />
            <TextView
                android:id="@+id/wdcd_item_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13777777777"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="#555555"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/wdcd_item_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="@drawable/shape9"
                android:text="晋AK5123"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/wdcd_item_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dp"
                android:textColor="#555555"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/wdcd_item_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高栏"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#555555"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/wdcd_item_text6"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="点击查看位置"
        android:gravity="center"
        android:textSize="12dp"
        android:layout_marginLeft="10dp"
        android:textColor="#555555"
        />
