<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_grzl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huotongtianxia.huoyuan.ui.WDCD.grzl.GRZLActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/ffffff"
        >
        <TextView
            android:id="@+id/back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/backtxtsize"
            android:text="返回"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginlefa"
            android:textColor="@color/back_tv_selector_show"
            android:layout_marginTop="@dimen/dp_24"
            />
        <TextView android:id="@+id/wdcd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="司机资料"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_alignBaseline="@+id/back_tv"
            android:layout_centerHorizontal="true"
            android:textColor="@color/hei"
            android:textSize="@dimen/titlesize"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/grzl_tx"
            android:layout_width="60dp"
            android:layout_height="60dp"
            fresco:placeholderImage="@drawable/aa"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true"
            fresco:roundingBorderWidth="2dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/aa"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/sjzl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="#222222"
            />
        <TextView
            android:id="@+id/sjzl_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="#222222"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape14"
        >
        <ImageView
            android:id="@+id/grzl_img3"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ka"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/grzl_text99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌:"
            android:layout_toRightOf="@+id/grzl_img3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#222222"
            />

        <TextView
            android:id="@+id/grzl_text999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车龄:"
            android:layout_toRightOf="@+id/grzl_img3"
            android:layout_below="@+id/grzl_text99"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#222222"
            />
        <TextView
            android:id="@+id/grzl_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grzl_text99"
            android:layout_toRightOf="@+id/grzl_text99"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:textColor="#222222"
            />
        <LinearLayout
            android:id="@+id/grzl_meiy_lin1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/grzl_img3"
            android:layout_below="@+id/grzl_text999"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape16"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/grzl_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.8"
                android:textSize="15dp"
                android:textColor="#ffffff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="米"
                android:textSize="15dp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/grzl_meiy_lin2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/grzl_meiy_lin1"
            android:layout_below="@+id/grzl_text999"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape6"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/grzl_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:textSize="15dp"
                android:textColor="#ffffff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吨"
                android:textSize="15dp"
                android:textColor="@color/ffffff"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/grzl_text7"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="高栏"
            android:layout_toRightOf="@+id/grzl_meiy_lin2"
            android:layout_below="@+id/grzl_text999"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/shape18"
            />
        <TextView
            android:id="@+id/sjzl_cp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#222222"
            android:layout_above="@+id/grzl_text4"
            android:layout_alignLeft="@+id/grzl_meiy_lin2"
            android:layout_alignStart="@+id/grzl_meiy_lin2" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@drawable/shape14"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易记录 "
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#FE8414"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#FE8414"
                android:text="("
                />
            <TextView
                android:id="@+id/grzl_jy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#FE8414"
                android:text="12"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#FE8414"
                android:text=")"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:text="好评"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/grzl_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:text="9"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:text="差评"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/grzl_cp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:text="9"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape14"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="偏好路线"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#FE8414"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/grzl_text8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="太原--济南"
                android:layout_marginLeft="20dp"
                />
            <!--<TextView-->
                <!--android:id="@+id/grzl_text9"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="2"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:text="济南&#45;&#45;北京"-->
                <!--android:layout_marginRight="15dp"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--/>-->
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/geisjddh"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="电话联系"
            android:textSize="@dimen/backtxtsize"
            android:layout_marginTop="25dp"
            android:textColor="@color/hei"
            android:background="@drawable/shape12"
            />
    </LinearLayout>
</LinearLayout>
