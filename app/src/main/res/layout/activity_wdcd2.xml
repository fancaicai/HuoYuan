<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huotongtianxia.huoyuan.ui.WDCD.WDCD.WDCDActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/wdcd_img01"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/grzximgfh"
            />
        <TextView
            android:id="@+id/wdcd_text01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="返回"
            android:layout_toRightOf="@+id/wdcd_img01"
            android:textSize="18dp"
            android:layout_marginTop="18dp"
            android:textColor="#ffffff"
            />
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            >
            <TextView
                android:id="@+id/wdcd2_bendi"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/shapee7"
                android:text="全部"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/wdcd2_quanbu"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="本地"
                android:textColor="#222222"
                android:textSize="15dp"
                android:gravity="center"
                android:background="@drawable/shapee8"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999"
        />
    <FrameLayout
        android:id="@+id/wdcd2_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:text="查看更多"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999"
        android:layout_marginBottom="30dp"
        />
    <!--<ListView-->
        <!--android:id="@+id/wdcd_list"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"></ListView>-->
</LinearLayout>
