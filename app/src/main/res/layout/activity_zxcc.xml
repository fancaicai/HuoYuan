<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zxcc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huotongtianxia.huoyuan.ui.WDCD.zxcc.ZXCCActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#50bbfc"
            >
            <ImageView
                android:id="@+id/zxcc_img01"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/grzximgfh"
                />
            <TextView
                android:id="@+id/zxcc_text01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="返回"
                android:layout_toRightOf="@+id/zxcc_img01"
                android:textSize="18dp"
                android:layout_marginTop="18dp"
                android:textColor="#ffffff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线车场"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                />
            <TextView
                android:id="@+id/zxcc_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="太原"
                android:layout_marginTop="25dp"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:layout_marginRight="30dp"
                android:textColor="#ffffff"
                />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="15dp"
                android:layout_marginTop="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/genduo"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@drawable/pager"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:id="@+id/main_linear"
            >
            <LinearLayout
                android:id="@+id/zxcc_hcc1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:checked="true"
                >
                <ImageView
                    android:id="@+id/zxcc_hcc2"
                    android:layout_width="40dp"
                    android:checked="true"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:background="@drawable/shape8"
                    android:src="@mipmap/bendi"
                    />
                <TextView
                    android:id="@+id/zxcc_hcc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本地车"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:textColor="#222222"
                    />
                <View
                    android:id="@+id/zxcc_view1"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_height="2dp"
                    android:background="#16BB91"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#999999"
                />
            <LinearLayout
                android:id="@+id/zxcc_bdc1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/zxcc_bdc2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:background="@drawable/shape7"
                    android:src="@mipmap/huicheng"
                    />
                <TextView
                    android:id="@+id/zxcc_bdc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回程车"
                    android:layout_marginTop="5dp"
                    android:textColor="#333333"
                    android:textSize="12dp"
                    />
                <View
                    android:id="@+id/zxcc_view2"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_height="2dp"
                    android:background="#16BB91"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#999999"
            />
        <FrameLayout
            android:id="@+id/main_framelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></FrameLayout>
    </LinearLayout>
</ScrollView>
