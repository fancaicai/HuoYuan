<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zhmm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@drawable/logindl"
    tools:context="com.huotongtianxia.huoyuan.ui.WDCD.login.ZHMMActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="密码找回"
        android:textSize="25dp"
        android:textColor="#222222"
        android:layout_weight="1"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/zhmm_et1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:hint="请输入手机号"
        android:inputType="number"
        android:layout_height="50dp"
        android:background="@null"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        >
        <EditText
            android:id="@+id/zhmm_et2"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:inputType="phone"
            android:gravity="center"
            android:layout_height="match_parent"
            android:hint="请输入验证码"
            android:background="@null"
            />
        <Button
            android:id="@+id/zhmm_btn1"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:text="获取"
            android:background="@drawable/shape16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="15dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999"
        />
    <EditText
        android:id="@+id/zhmm_et3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/login_et1"
        android:inputType="numberPassword"
        android:hint="请输入6-16位数字"
        android:gravity="center"
        android:background="@null"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999"
        />
    <EditText
        android:id="@+id/zhmm_et4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="numberPassword"
        android:hint="请确认密码"
        android:gravity="center"
        android:background="@null"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999"
        />
    <Button
        android:id="@+id/zhmm_btn2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="#ffffff"
        android:background="@drawable/shape16"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="50dp"
        android:text="登录"
        android:textSize="20dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>
