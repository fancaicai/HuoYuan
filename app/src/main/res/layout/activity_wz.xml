<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huotongtianxia.huoyuan.ui.WDCD.WDCD.WZActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/ffffff"
            >
            <TextView
                android:id="@+id/back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/backtxtsize"
                android:text="返 回"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marginlefa"
                android:textColor="@color/back_tv_selector_show"
                android:layout_marginTop="@dimen/dp_24"
                />
            <TextView android:id="@+id/wdcd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的车队"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_alignBaseline="@+id/back_tv"
                android:layout_centerHorizontal="true"
                android:textColor="@color/hei"
                android:textSize="@dimen/titlesize"
                />
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hei"/>
        <TextView
            android:id="@+id/wz_text1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="详细地址"
            android:gravity="center"
            />
        <com.amap.api.maps2d.MapView
            android:id="@+id/wz_mapview"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

    <ListView
        android:id="@+id/wz_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
