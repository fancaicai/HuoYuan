<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tjcl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huotongtianxia.huoyuan.ui.WDCD.tjcl.TJCLActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/ffffff"
        >
        <TextView
            android:id="@+id/back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/backtxtsize"
            android:text="返 回"
            android:drawableLeft="@drawable/back_state_focused"
            android:drawablePadding="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginlefa"
            android:textColor="@color/back_tv_selector_show"
            android:layout_marginTop="@dimen/dp_24"
            />
        <TextView android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添 加 车 辆"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_alignBaseline="@+id/back_tv"
            android:layout_centerHorizontal="true"
            android:textColor="@color/hei"
            android:textSize="@dimen/titlesize"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hei"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape13"
        >
        <Spinner
            android:id="@+id/tjcl_spinner"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/tjcl_edit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="输入车牌号查找"
            android:background="@null"
            android:textSize="15sp"
            android:padding="10px"
            android:layout_toRightOf="@+id/tjcl_spinner"
            />
        <ImageButton android:id="@+id/tjcl_imbt"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/s"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/zjcl_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"></ListView>
    <Button
        android:id="@+id/tjcl_btn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/shape6"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="添加"
        android:textColor="@color/hei"
        />
</LinearLayout>
