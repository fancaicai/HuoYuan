<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huotongtianxia.huoyuan.ui.WDCD.wdhy.WDHYActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#50bbfc"
        >
        <ImageView
            android:id="@+id/wdhy_img01"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/grzximgfh"
            />
        <TextView
            android:id="@+id/wdhy_text01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="返回"
            android:layout_toRightOf="@+id/wdhy_img01"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="27dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货源管理"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/wdhy_tab"
        app:tabIndicatorColor="@color/home"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/home"
        app:tabTextColor="#555555"
        app:tabMode="fixed"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/wdhy_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
