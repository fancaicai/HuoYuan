    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">
    <TextView
        android:id="@+id/back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="返 回"
        android:layout_centerVertical="true"
        android:textSize="@dimen/backtxtsize"
        android:drawableLeft="@drawable/backivpress"
        android:drawablePadding="@dimen/marginlefa"
        android:layout_marginLeft="@dimen/marginlefa"
        android:textColor="@color/back_tv_selector_show"
        />
    <android.support.design.widget.TabLayout
        android:id="@+id/zxcc_tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        app:tabIndicatorColor="@color/zi"
        app:tabSelectedTextColor="@color/zi"
        android:layout_centerHorizontal="true"
        app:tabTextAppearance="@style/TabLayoutTextZXCC"
        />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hei"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/zxcc_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>

