<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huotongtianxia.huoyuan.ui.WDCD.HYFB.HYFBFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/ffffff"
        >
        <TextView
            android:id="@+id/back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/backtxtsize"
            android:text="返 回"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginlefa"
            android:textColor="@color/back_tv_selector_show"
            android:layout_marginTop="@dimen/dp_24"
            />
        <TextView android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的车队"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_alignBaseline="@+id/back_tv"
            android:layout_centerHorizontal="true"
            android:textColor="@color/hei"
            android:textSize="@dimen/titlesize"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hei"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:layout_height="match_parent"
            android:text="装货时间"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/hyfb_shijian1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选择装货时间"
            android:layout_marginLeft="5dp"
            android:textSize="13dp"
            android:gravity="center_vertical"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/myyou1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/fahuo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@color/ffffff"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/start"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/hyfb_fhdz_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="发货地省、市、区"
                    android:textSize="15dp"
                    android:textColor="#555555"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hui"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/hyfb_fhdz_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColor="#555555"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/hui"
            />
        <LinearLayout
            android:id="@+id/hyfb_fhdz_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/cydz_1"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常用地址"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/fahuo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@color/ffffff"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/stop"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/hyfb_shdz_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="收货地省、市、区"
                    android:textSize="15dp"
                    android:textColor="#555555"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hui"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/hyfb_shdz_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColor="#555555"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/hui"
            />
        <LinearLayout
            android:id="@+id/hyfb_shdz_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/cydz_1"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常用地址"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/fahuo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="vertical"
        android:background="#ffffff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="13dp"
                android:layout_height="match_parent"
                android:text="货物名称"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/hyfb_et1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:hint="钢铁"
                android:textSize="13dp"
                android:gravity="center"
                android:background="@drawable/shape15"
                />
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="重量 （吨）"
                android:textSize="13dp"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/hyfb_et2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:hint="吨位"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape15"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/hui"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="13dp"
                android:layout_height="match_parent"
                android:text="需要车型"
                android:gravity="center"
                />
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:background="@mipmap/spinner"
                />
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="  需要车长  (米)"
                android:textSize="13dp"
                android:gravity="center"
                />
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:textColor="#ffffff"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:background="@mipmap/spinner"
                 />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/hui"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="15dp"
                android:layout_height="match_parent"
                android:text="参考价"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:id="@+id/hyfb_et3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="400"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:textColor="#555555"
                android:layout_marginLeft="5dp"
                android:background="@null"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="吨/元"
                android:layout_marginLeft="5dp"
                android:textSize="13dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/myyou1"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="#ebebeb"
        >
        <Button
            android:id="@+id/hyfb_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="发布货源"
            android:textSize="15dp"
            android:textColor="@color/hei"
            android:background="@drawable/shape6"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="130dp"
            android:layout_marginBottom="15dp"
            />
    </LinearLayout>
</LinearLayout>
