<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logindl"
    tools:context="com.huotongtianxia.huoyuan.ui.WDCD.login.DLActivity">
    <ImageView android:id="@+id/loginin_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/logining"
        android:visibility="gone"/>
    <LinearLayout android:id="@+id/linearlayout_above"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/cge"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请使用手机登录"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <RelativeLayout android:id="@+id/RelativeLayout_center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >
        <EditText
            android:id="@+id/login_et1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:hint="请输入账号"
            android:drawableLeft="@mipmap/shouji"
            android:inputType="number"
            android:gravity="center"
            android:layout_height="50dp"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#999999"
            android:layout_below="@id/login_et1"
            />
        <EditText
            android:id="@+id/login_et2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/login_et1"
            android:inputType="numberPassword"
            android:hint="请输入密码"
            android:drawableLeft="@mipmap/mima"
            android:gravity="center"
            android:background="@null"
            />
        <View
            android:id="@+id/viewviewview"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#999999"
            android:layout_below="@id/login_et2"
            />
        <CheckBox
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="记住密码"
            android:id="@+id/Login_Remember"
            android:layout_marginTop="10dp"
            android:layout_below="@id/viewviewview"
            android:checked="false"
            android:textSize="15dp" />
        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="登 录"
            android:background="@drawable/shape16"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_below="@+id/login_et2"
            android:layout_marginTop="50dp"
            />
    </RelativeLayout>
    <RelativeLayout android:id="@+id/RelativeLayout_below"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        >
        <TextView
            android:id="@+id/login_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            />
    </RelativeLayout>
</LinearLayout>
